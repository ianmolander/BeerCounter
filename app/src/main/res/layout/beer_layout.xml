<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beer">


    <EditText
        android:id="@+id/beer_price"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/beer_name"
        android:hint="Pris"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textColorHint="@color/indigo"
        android:textAlignment="center"
        android:textColor="@color/indigo"
        android:background="@drawable/textviews" />

    <EditText
        android:id="@+id/beer_quantity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/beer_price"
        android:hint="Antal"
        android:textSize="25sp"
        android:textColorHint="@color/indigo"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textColor="@color/indigo"
        android:background="@drawable/textviews"/>

    <AutoCompleteTextView
        android:id="@+id/beer_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:hint="Ölnamn"
        android:textSize="25sp"
        android:textColorHint="@color/indigo"
        android:textAlignment="center"
        android:textColor="@color/indigo"
        android:background="@drawable/textviews"
        />



    <Button
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Lägg till"
        android:onClick="getUserInput"
        android:id="@+id/add_beer_btn"
        android:layout_below="@+id/beer_quantity"
        android:layout_marginTop="30sp"
        android:background="@android:drawable/btn_default_small"
        android:textColor="@color/text_color"/>





</RelativeLayout>
